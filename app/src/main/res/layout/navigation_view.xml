<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:src="@drawable/ic_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_dashboard_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_navigation_button"
        android:padding="13dp"
        android:src="@drawable/ic_outline_home"
        android:tint="@color/inactive_icon_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_stat_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_navigation_button"
        android:padding="13dp"
        android:src="@drawable/ic_outline_chart"
        android:tint="@color/inactive_icon_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_user_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_navigation_button_inactive"
        android:padding="13dp"
        android:src="@drawable/ic_outline_group"
        android:tint="@color/inactive_icon_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_results_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_navigation_button_inactive"
        android:padding="13dp"
        android:src="@drawable/ic_outline_money"
        android:tint="@color/inactive_icon_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_matchs_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_navigation_button_inactive"
        android:padding="13dp"
        android:src="@drawable/ic_outline_sports"
        android:tint="@color/inactive_icon_navigation" />

</androidx.appcompat.widget.LinearLayoutCompat>
