<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/historic_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/historic_consumption_dot"
        app:layout_constraintBottom_toBottomOf="@id/historic_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/historic_date" />

    <TextView
        android:id="@+id/historic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/nexabold"
        android:minWidth="45dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/historic_dot"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22:32" />

    <TextView
        android:id="@+id/historic_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:ellipsize="end"
        android:fontFamily="@font/nexabold"
        android:maxWidth="150dp"
        android:minWidth="80dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/historic_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Anthony" />

    <TextView
        android:id="@+id/historic_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nexabold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/historic_user"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2â‚¬" />

</androidx.constraintlayout.widget.ConstraintLayout>
