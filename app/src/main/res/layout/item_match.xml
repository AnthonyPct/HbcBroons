<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    tools:background="@color/yellow"
    tools:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="25/09/2020 \n 18h30" />

        <TextView
            android:id="@+id/match_first_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/nexabold"
            android:maxWidth="200dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/match_date"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="HBC BROONS" />

        <TextView
            android:id="@+id/match_second_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/nexabold"
            android:maxWidth="200dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/match_date"
            app:layout_constraintTop_toBottomOf="@id/match_first_team"
            tools:text="FOUGERE" />

        <TextView
            android:id="@+id/match_first_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nexabold"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/match_first_team"
            app:layout_constraintTop_toTopOf="@id/match_first_team"
            tools:text="32" />

        <TextView
            android:id="@+id/match_second_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nexabold"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/match_second_team"
            app:layout_constraintTop_toTopOf="@id/match_second_team"
            tools:text="32" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>